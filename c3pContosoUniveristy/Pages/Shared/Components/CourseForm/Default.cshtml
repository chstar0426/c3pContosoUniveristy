@model DataModels.CourseFrm

    <form method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @*@if (Model.FrmType == DataModels.FrmType.Modify)
        {
            <input type="hidden" asp-for="Course.CourseID" />

        }*@
        <div class="form-group">
            <label asp-for="Course.CourseID" class="control-label"></label>
            <input asp-for="Course.CourseID" class="form-control" />
            <span asp-validation-for="Course.CourseID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Course.Title" class="control-label"></label>
            <input asp-for="Course.Title" class="form-control" />
            <span asp-validation-for="Course.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Course.Credits" class="control-label"></label>
            <input asp-for="Course.Credits" class="form-control" />
            <span asp-validation-for="Course.Credits" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Course.Department" class="control-label"></label>
            <select asp-for="Course.DepartmentID" class="form-control" asp-items="ViewBag.Department">
                <option value="">--Select Department--</option>
            </select>
            <span asp-validation-for="Course.DepartmentID" class="text-danger"></span>
        </div>

        @if (Model.FrmType == DataModels.FrmType.Write) { 
            <div class="form-group">
                <label class="control-label">보안문자</label>
                <input id="SecurityText" name="SecurityText" class="form-control" value="" />
                @await Component.InvokeAsync("SecurityTexts") &nbsp; &nbsp; &nbsp; <span class="text-danger">@Model.ErrorMessage</span>
            </div>
            }

        <hr />

        <div class="btn-group" role="group" aria-label="Basic example">
            <input type="submit" value="저장" class="btn btn-outline-danger" />
            <a href='./Index@(Model.ReturnUrl)' class="btn btn-outline-secondary">목록</a>
        </div>

    </form>